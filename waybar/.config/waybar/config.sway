{
    "layer": "top",
    "position": "bottom",
    "height": 32,
    //"modules-left": ["wlr/taskbar"],
    "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],
    //"modules-center": [],
    "modules-right": ["idle_inhibitor", "mpris", "network", "pulseaudio", "battery", "memory", "cpu", "clock", "tray"],
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 20,
        "icon-theme": "Adwaita",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "on-click-right": "minimize"
    },
    "sway/window": {
        "max-length": 50
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["ÔêÄ"],
        "tooltip": false,
        "on-scroll-up": "light -A 5",
        "on-scroll-down": "light -U 5"
    },
    "battery": {
        "states": {
            "good": 50,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{power}W {time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "clock": {
    	"format": "{:%H:%M}",
        "format-alt": "{:%Y-%m-%d %a %H:%M}"
     },
    "cpu": {
        "interval": 5,
        "format": "{avg_frequency}GHz {usage}%"
     },
     "memory": {
        "interval": 10,
        "format": "MEM {percentage}%"
     },
    "pulseaudio": {
        "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Û∞ùü {icon}Ôäî {format_source}",
        "format-muted": "Û∞ùü {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "network": {
        "format-wifi": "Û∞ñ© {essid}",
        "format-ethernet": "Û∞õ≥ {ifname}",
        "format-disconnected": "Û∞åô",
        "max-length": 15
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
      }
    },
    "mpris": {
        "format": " {player_icon} {dynamic} ",
        "format-paused": " {status_icon} <i>{dynamic}</i> ",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ",
            "firefox": "ü¶ä"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
